<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drivererte">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.sopir.ChangeStatusActivitySopir"
                  android:theme="@style/AppThemeActionBar1"/>

        <activity
            android:name=".activity.feeder.ChangeStatusActivityFeeder"
            android:theme="@style/AppThemeActionBar1"/>


        <activity
            android:name=".activity.sopir.DetailTripSopirActivity"
            android:theme="@style/AppThemeActionBar" />

        <activity android:name=".activity.feeder.AccountActivityFeeder" />
        <activity android:name=".activity.feeder.HistoryActivityFeeder" />
        <activity android:name=".activity.feeder.MainActivityFeeder" />

        <activity
            android:name=".activity.feeder.LoginFeederActivity"
            android:parentActivityName=".activity.sopir.LoginActivity"
            android:theme="@style/AppThemeActionBar1"/>

        <activity android:name=".activity.sopir.AccountActivity" />
        <activity android:name=".activity.sopir.HistoryActivity" />
        <activity android:name=".activity.sopir.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.sopir.LoginActivity" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>